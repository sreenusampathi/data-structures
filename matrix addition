#include<stdio.h>
int main()
{
	int a[10][10],b[10][10],add[10][10],r,c,i,j,k;
	printf("enter the no of rows ");
	scanf("%d",&r);
	printf("enter the no. of coloums");
	scanf("%d",&c);
	printf("enter the first matrix elements=\n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&a[i][j]);
		}
	}
	printf("enter the second matrix elements=\n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			scanf("%d",&b[i][j]);
		}
	}
	printf("addition the matrix=\n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			add[i][j]=0;
			for(k=0;k<c;k++)
			{
				add[i][j]+=a[i][k]+b[k][j];
			}
		}
	}
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
			printf("%d\t",add[i][j]);
		}
		printf("\n");
	}
	return 0;
}
